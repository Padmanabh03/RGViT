import json
import os

JSON_PATH = './nuscenes_blobs/train_samples.json'  # Change if needed

def inspect_first_sample():
    if not os.path.exists(JSON_PATH):
        print(f"âŒ File not found: {JSON_PATH}")
        return

    with open(JSON_PATH, 'r') as f:
        data = json.load(f)

    if not data:
        print("âš ï¸ JSON file is empty.")
        return

    first_sample = data[0]

    print("ðŸ“¦ First Sample in Dataset:\n")
    for key, value in first_sample.items():
        if isinstance(value, list) and len(value) > 5:
            print(f"ðŸ”‘ {key}: [Length: {len(value)}] Example: {value[:2]} ...")
        else:
            print(f"ðŸ”‘ {key}: {value}")

if __name__ == "__main__":
    inspect_first_sample()
